<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:duration="@integer/rn_anim_duration"
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="0"
        android:toYScale="0">
    </scale>

    <alpha
        android:duration="@integer/rn_anim_duration"
        android:fromAlpha="1"
        android:toAlpha="0">
    </alpha>
</set>